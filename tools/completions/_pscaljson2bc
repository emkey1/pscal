#compdef pscaljson2bc

_pscaljson2bc() {
  local -a _opts
  _opts=(
    '(--help -h)'{-h,--help}'[show this help and exit]'
    '--dump-bytecode[disassemble generated bytecode to stderr]'
    '--dump-bytecode-only[disassemble and exit without writing raw bytecode]'
    '(-o --output)'{-o,--output}'[write output bytecode to file]:output file:_files'
  )

  _arguments \
    ${_opts[@]} \
    '*:input JSON file:_files -g "*.json"'
}

_pscaljson2bc "$@"

