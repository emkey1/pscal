program NestedProcedures;

var
  g: integer;

procedure NestedExample;
  var
    x: integer;

  procedure InnerProcedure;
  begin
    WriteLn('  [Inside InnerProcedure] Start: x = ', x, ', g = ', g);
    x := 20; { Modifies the 'x' from NestedExample }
    g := 200; { Modifies the global 'g' }
    WriteLn('  [Inside InnerProcedure] End:   x = ', x, ', g = ', g);
  end;

begin { Main body of NestedExample }
  x := 10;
  g := 100;
  WriteLn('[Outside] Before call: x = ', x, ', g = ', g);

  InnerProcedure; { Call the nested procedure }

  WriteLn('[Outside] After call:  x = ', x, ', g = ', g);
end;

begin { Main program body }
  NestedExample;
end.
