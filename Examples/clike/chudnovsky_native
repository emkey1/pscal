#!/usr/bin/env clike
long double chudnovsky_native(long n) {
    const long double C3 = 262537412640768000; // 640320^3
    long double sum = 13591409;
    long double term = 1;
    for (long k = 1; k < n; k++) {
        long double k_d = (long double)k;
        term *= -(6 * k_d - 5) * (2 * k_d - 1) * (6 * k_d - 1) * 24;
        term /= (k_d * k_d * k_d * C3);
        sum += term * (13591409 + 545140134 * k_d);
    }
    return 426880 * sqrt(10005) / sum;
}

int main() {
    long n;
    printf("Please enter an integer value for iterations: ");
    scanf(n);

    long double pi = chudnovsky_native(n);
    printf("pi: %.31Lf\n", pi);

    return 0;
}
