#!/usr/bin/env rea
/* This is a multi-line comment.
   It can span across multiple lines.
*/

// The demo class holds the logic for showcasing variables and formatting.
class VariableFormatDemo {
  // A simple method to demonstrate variable declaration and operations.
  void run() {
    // Variable declarations with different data types
    int int_var = 10;
    float float_var = 5.5;
    bool bool_var = true;
    str string_var = "Rea Language";

    // Arithmetic operations
    int result_int = int_var + 5;
    float result_float = float_var * 2.0;

    // String concatenation
    str full_string = string_var + " Demo";

    // Boolean logic
    bool comparison = int_var > float_var;

    // Output results using built-in writeln
    writeln("Integer result: ", result_int);
    writeln("Float result: ", result_float:0:2);
    writeln("Boolean comparison (10 > 5.5): ", comparison);
    writeln("Concatenated string: ", full_string);
  }
}

int main() {
    VariableFormatDemo demo = new VariableFormatDemo();  // allocate the object
    demo.run();
    return 0;
}
